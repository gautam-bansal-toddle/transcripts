{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["DOM", "ESNext"],
    "sourceMap": true,
    "jsx": "preserve",
    "types": ["react"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.spec.tsx"]
}
